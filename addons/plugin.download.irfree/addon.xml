<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.download.irfree"
       name="IRFree.com"
       version="0.2.0"
       provider-name="pgoeri">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
    <import addon="plugin.program.jdownloader" version="1.0.2"/>
    <import addon="script.module.ddlscraper" version="0.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
             library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Browse releases on IRFree.com and add links to JDownloader</summary>
    <description lang="en">This plugin scrapes posts from IRFree.com and presents them as directory items. By selecting a post the link gets added to JDownloader.</description>
  </extension>
</addon>
